<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dataTemplate="clr-namespace:BhpAssetComplianceWpfOneDesktop.ViewModels.DataTemplate"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate DataType="{x:Type dataTemplate:PosterHeaderDataTemplateViewModel}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
            </Grid.RowDefinitions>

            <TextBlock Text="{Binding MyPosterName}" FontWeight="Bold" FontSize="20" Grid.Row="0"
                       Style="{StaticResource TextBlockStyle}"/>
            <Rectangle Fill="Black" HorizontalAlignment="Stretch" 
                        Grid.Row="1" Margin="{StaticResource DefaultMargin}"/>
        </Grid>
    </DataTemplate>

    <DataTemplate DataType="{x:Type dataTemplate:RibbonButtonDataTemplateViewModel}">
        <Button Command="{Binding PushCommand}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Image Source="/Resources/Icons/Truck.png" RenderOptions.BitmapScalingMode="HighQuality" Grid.Column="0"></Image>
                <TextBlock Text="{Binding MyHeader}" Grid.Column="1"/>
            </Grid>
        </Button>
    </DataTemplate>
</ResourceDictionary>